doctype html
html
    head
        title PageTitle
        link(rel="stylesheet" href='style/foundation.css')
        link(rel="stylesheet" href='style/style.css')
    body
        header.header-main
            nav.header-main__menu
                ul.header-main__list
                    li.header-main__item ИНФОРМАЦИЯ
                    li.header-main__item НОВОСТИ
                    li.header-main__item ПРАЙС-ЛИСТ
                    li.header-main__item МАГАЗИН
                    li.header-main__item КОНТАКТЫ
                .user-login
                    img.user-login__img(src="" alt="SignIn")
                    .user-login__text ВХОД
            .logo
                img.logo__img(src="" alt="SignIn")
        main.container
            h1.visually-hidden Барбершоп "Бородинский"
            section.advantage
                ul.advantage__list
                    li.advantage__item
                        h2.advantage__title БЫСТРО
                        p.advantage__text МЫ ДЕЛАЕМ СВОЮ РАБОТУ БЫСТРО! ДВА ЧАСА ПРОЛЕТЯТ НЕЗАМЕТНО И ВЫ — СЧАСТЛИВЫЙ ОБЛАДАТЕЛЬ СТИЛЬНОЙ СТРИЖКИ-МИНУТКИ!
                    li.advantage__item
                        h2.advantage__title КРУТО
                        p.advantage__text ЗАБУДЬТЕ, КАК ВЫ СТРИГЛИСЬ РАНЬШЕ. МЫ СДЕЛАЕМ ИЗ ВАС ЗВЕЗДУ ФУТБОЛА ИЛИ КИНО!
                    li.advantage__item
                        h2.advantage__title ДОРОГО
                        p.advantage__text НАШИ МАСТЕРА — ПРОФЕССИОНАЛЫ СВОЕГО ДЕЛА И НЕ МОГУТ СТОИТЬ ДЕШЕВО. К ТОМУ ЖЕ, РАЗВЕ ЦЕНА НЕ ДАЕТ ОПРЕДЕЛЕНЫЙ СТАТУС?
            section.news
                h2.news__title
                ul.news__list
                    li.news__item
                        p.news__text НАМ НАКОНЕЦ ЗАВЕЗЛИ ЯГЕРМАЙСТЕР! ТЕПЕРЬ ВЫ МОЖЕТЕ ПРОПУСТИТЬ СТАКАНЧИК ВО ВРЕМЯ СТРИЖКИ
                        time(datetime="2019-01-11") 11 января
                    li.news__item
                        p.news__text В НАШЕЙ КОМАНДЕ ПОПОЛНЕНИЕ, БОРИС «БРИТВА» СТРИГУНЕЦ, ОБЛАДAТЕЛЬ МНОЖЕСТВА ТИТУЛОВ И НАГРАД ПОПОЛНИЛ НАШИ СТРОЙНЫЕ РЯДЫ
                        time(datetime="2019-01-18") 18 января
                a.btn.btn-news(href="news.html") Все Новости
            section.gallery
                h2.gallery__title ФОТОГАЛЕРЕЯ






        script(src='js/foundation.js')
